<div>
    <p>フィットネスを行なった日：<%= @post.fitness_date %></p>
    <p>メニュー：<%= @post.menu %></p>
    <p>感想・メモ：<%= @post.body %></p>
    <% if @post.image.attached? %>
      <%= image_tag @post.get_image(200,200), class:"img-fluid object-fit-cover rounded-4 mx-auto d-block shadow-sm" %>
    <% end %>
    <p>ユーザーネーム：<%= @post.user.name %><%= image_tag @post.user.get_profile_image(100,100) %></p>
    <p>投稿日：<%= @post.created_at.strftime('%Y-%m-%d') %></p>
    <% if @post.user == current_user %>
      <%= link_to "編集", edit_post_path(@post.id) %>
      <%= link_to "削除", post_path(@post), method: :delete %>
    <% end %>
  </div>