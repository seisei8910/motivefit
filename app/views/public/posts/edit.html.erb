<% if @post.errors.any? %>
  <div class="errormessage">
    投稿の編集に失敗しました 😢 入力内容をご確認ください。
    <h2><%= @post.errors.count %>件のエラーが発生しています</h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container-fluid">
  <div class="row graph_paper-bg justify-content-center">
    <div class="col-md-5 col-sm-9 shadow-lg rounded-4 px-0 my-5 bg-white">
      <h5 class="text-white bg-emerald p-4 mb-0 rounded-top-4">編集フォーム</h5>
      <div class="form-body p-4">
        <%= form_with model: @post, class: "mt-3", method: :patch do |f| %>
          <div class="form-group">
            <h6 class="text-dark">フィットネスを行なった日</h6>
            <%= f.datetime_field :start_time, class: "form-control border-emerald rounded-4" %>
          </div>
          <div class="form-group">
            <h6 class="text-dark">タイトル</h6>
            <%= f.text_field :title, class: "form-control border-emerald rounded-4", placeholder: "例：朝ランニング 5km完了 気分爽快！" %>
          </div>
          <div class="form-group">
            <h6 class="text-dark">メニュー</h6>
            <%= f.text_area :menu, class: "form-control border-emerald rounded-4", rows: 3, placeholder: "例：ランニング 5km、スクワット 3セット" %>
          </div>
          <div class="form-group">
            <h6 class="text-dark">感想・メモ</h6>
            <%= f.text_area :body, class: "form-control border-emerald rounded-4", rows: 3, placeholder: "今日のフィットネスについて記録を残しましょう" %>
          </div>
          <div class="form-group">
            <h6 class="text-dark">画像(任意)</h6>
            <%= f.file_field :image, accept: "image/*", class: "form-control border-emerald rounded-4" %>
          </div>
          <hr>
          <%= f.submit '保存', class: "btn btn-lg btn-block btn-emerald text-white mt-4 rounded-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>