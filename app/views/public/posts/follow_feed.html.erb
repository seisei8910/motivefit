<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-4">
      <%= render "public/users/profile", user: @user %>
      <%= render "new_post", post: @post %>
    </div>
    <div class="col-md-7 offset-md-1">
      <div class="row border-bottom mb-2">
        <div class="col-6">
          <%= link_to posts_path do %>
            <h3 class="font-weight-bold w-50 mx-auto mb-2 text-center text-secondary">投稿一覧</h2>
          <% end %>
        </div>
        <div class="col-6">
          <%= link_to follow_feed_path do %>
            <h3 class="font-weight-bold w-75 mx-auto mb-2 border-bottom border-5 border-success text-success text-center">フォロー中</h2>
          <% end %>
        </div>
      </div>
      <%= render "posts_list", posts: @posts %>
    </div>
  </div>
</div>