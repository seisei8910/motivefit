<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :word, class: "border-light rounded-4" %>
    <%= f.select :model, options_for_select({"User" => "user", "Post" => "post"}) %>
    <%= f.select :method, options_for_select({"完全一致" => "perfect_match", "前方一致" => "forward_match", "後方一致" => "backward_match", "部分一致" => "partial_match"}) %>
    <%= f.submit "検索", class: "btn btn-sm btn-outline-secondary rounded-4" %>
  <% end %>
<% end %>