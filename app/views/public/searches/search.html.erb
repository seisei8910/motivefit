<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-4">
      <%= render "public/users/profile", user: @user %>
      <%= render "public/posts/new_post", post: @post %>
    </div>
    <div class="col-md-8">
      <% if @model == 'user' %>
        <h2 class="font-weight-bold mb-4">ユーザー <%= I18n.t("search.method.#{@method}", default: @method) %> 検索結果一覧</h2>
        <%= render "public/users/list", users: @users %>
      <% elsif @model == 'post' %>
        <h3 class="font-weight-bold mb-4">投稿 <%= I18n.t("search.method.#{@method}", default: @method) %> 検索結果一覧</h3>
        <%= render "public/posts/posts_list", posts: @posts %>
      <% end %>
    </div>
  </div>
</div>