<% if @user.errors.any? %>
  <div class="errormessage">
    プロフィールの更新に失敗しました。入力内容をご確認ください。
    <h2><%= @user.errors.count %>件のエラーが発生しています</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container-fluid">
  <div class="row graph_paper-bg justify-content-center">
    <div class="col-md-5 col-sm-9 shadow-lg rounded-4 px-0 my-5 bg-white">
      <h5 class="text-white bg-info p-4 mb-0 rounded-top-4">プロフィール編集フォーム</h5>
      <div class="form-body p-4">
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <h6 class="text-dark">名前</h6>
            <%= f.text_field :name, class: "form-control border-info rounded-4"%>
          </div>
          <div class="form-group">
            <h6 class="text-dark">プロフィール画像（任意）</h6>
            <%= f.file_field :profile_image, class: "form-control border-info rounded-4", accept: "image/*" %>
          </div>
          <div class="form-group">
            <h6 class="text-dark">ひとこと（任意）</h6>
            <%= f.text_field :status_message, class: "form-control border-info rounded-4"%>
          </div>
          <div class="form-group">
            <%= f.submit "変更を保存", class: "btn btn-lg btn-block btn-info text-white mt-4 rounded-4" %>
          </div>
          <%= link_to user_path(current_user.id), class: "btn btn-outline-danger btn-block rounded-4",method: :delete, "data-confirm" => "本当に退会しますか？" do %>
            <i class="fa-solid fa-door-open"></i></i> 退会
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
