<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-4">
      <%= render "profile", user: @user %>
      <%= render "public/posts/new_post", post: @post %>
    </div>
    <div class="col-md-8">
      <%= month_calendar events: @events do |date, events| %>
        <%= date.day %>
      <% end %>
      <h3 class="font-weight-bold mb-4">あなたの投稿</h3>
      <%= render "public/posts/posts_list", posts: @posts %>
    </div>
  </div>
</div>