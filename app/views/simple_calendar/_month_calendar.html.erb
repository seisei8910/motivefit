<div class="simple-calendar border rounded-4 shadow-sm mb-4">
  <!-- „Éò„ÉÉ„ÉÄ„Éº -->
  <div class="calendar-heading d-flex align-items-center justify-content-between p-3 bg-light rounded-top-4">
    <time datetime="<%= start_date.strftime('%Y-%m') %>" class="calendar-title fs-5 fw-bold">
      <%= start_date.year %>Âπ¥ <%= t('date.month_names')[start_date.month] %>
    </time>

    <!-- „Éä„Éì„Ç≤„Éº„Ç∑„Éß„É≥ -->
    <nav class="d-flex gap-2">
      <%= link_to calendar.url_for_previous_view, class: "btn btn-outline-info btn-sm d-flex align-items-center" do %>
        <i class="fa-solid fa-chevron-left fa-lg"></i>
      <% end %>

      <%= link_to calendar.url_for_today_view, class: "btn btn-info btn-sm fw-bold d-flex align-items-center" do %>
        <i class="fa-regular fa-calendar fa-lg"></i> ‰ªäÊúà
      <% end %>

      <%= link_to calendar.url_for_next_view, class: "btn btn-outline-info btn-sm d-flex align-items-center" do %>
        <i class="fa-solid fa-chevron-right fa-lg"></i>
      <% end %>
    </nav>
  </div>

  <!-- „Ç´„É¨„É≥„ÉÄ„ÉºÊú¨‰Ωì -->
  <table class="table table-bordered text-center">
    <thead class="table-light">
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th class="fw-bold text-info"><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <% classes = ["p-3 rounded-2 btn d-table-cell"] %>
            <% classes << "bg-info text-white" if day == Date.today %>
            <% classes << "bg-success text-white" if calendar.sorted_events_for(day).any? %>

            <%= content_tag :td, class: classes.join(" "),
            data: { bs_toggle: "modal", bs_target: "#calendarModal", date: day, events: calendar.sorted_events_for(day).to_json } do %>
              <!-- Êó•‰ªò„ÇíË°®Á§∫ -->
              <div class="date">
                <%= day.day %>
              </div>
              <!-- „Ç§„Éô„É≥„Éà„Åå„ÅÇ„Çå„Å∞Ë°®Á§∫ -->
              <% if calendar.sorted_events_for(day).any? %>
                <div class="events">
                  <% calendar.sorted_events_for(day).each do |event| %>
                    üåü
                  <% end %>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
      <div class="modal fade" id="calendarModal" tabindex="-1" aria-labelledby="calendarModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="calendarModalLabel">‰∫àÂÆöË©≥Á¥∞</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <p>ÈÅ∏Êäû„Åó„ÅüÊó•‰ªò: <span id="modalDate"></span></p>
              <h5>„Ç§„Éô„É≥„Éà</h5>
              <ul id="modalEvents" class="list-group"></ul>
            </div>
            <div class="modal-footer">
              <a href="#" id="newEventLink" class="btn btn-primary">Êñ∞Ë¶èÊäïÁ®ø</a>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </tbody>
  </table>
</div>
